# JP2Forge Web - Environment Configuration

# Django settings
SECRET_KEY=changeme
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database settings
# Use this for SQLite (development)
DATABASE_URL=sqlite:///db.sqlite3
# Use this for PostgreSQL (production)
# DATABASE_URL=postgres://user:password@localhost:5432/jp2forge_web

# PostgreSQL credentials (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# File upload limits
MAX_UPLOAD_SIZE=10485760  # 10MB

# JP2Forge settings
JP2FORGE_OUTPUT_DIR=media/jobs
JP2FORGE_REPORT_DIR=media/reports
# Set to True to enable mock mode when JP2Forge is not available
JP2FORGE_MOCK_MODE=False

# Email settings (for production)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=user@example.com
# EMAIL_HOST_PASSWORD=your-password
# DEFAULT_FROM_EMAIL=JP2Forge Web <noreply@example.com>

